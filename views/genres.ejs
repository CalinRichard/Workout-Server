<%- include('partials/header') %>

<main>
    <div class="container">
        <div class="row">
            <% movies.forEach((movie)=> {
                for(let i = 0; i < movie.genre.length; i++){ if(movie.genre[i].includes(genre)){ %>
                    <div class="col-lg-12 movie-card">
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="/images/<%= movie.photo %>" class="img-fluid rounded-start card-img" alt="Movie Poster">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= movie.name %>
                                        </h5>
                                        <br>
                                        <p class="card-text">
                                            <i class="bi bi-eye" style="color: gold" ></i> Genre: <%= movie.genre.join(", ") %>
                                        </p>
                                        <br>
                                        <p class="card-text">
                                            <small>
                                                <i class="bi bi-star" style="color: gold"></i> Rating: <%= movie.rating %>
                                            </small>
                                        </p>
                                        <br>
                                        <p class="card-text">
                                            <small>
                                                <i class="bi bi-calendar" style="color: gold"></i> Year: <%= movie.year %>
                                            </small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }}}) %>
        </div>
    </div>
</main>

<%- include('partials/footer') %>