<%- include('partials/header') %>
<div class="container">
    <div class="row">
        <h2 class="movie-list-title">Movie List</h2>
        <div class="col-lg-4 com-sm-12 mt-5">
            <h2 class="add-movie-title mb-5">Add movie</h2>
            <form class="container" method="post" action="/movies">
                <div class="form-group mb-5">
                    <input class="form-control" type="text" name="name" id="movie-name" placeholder="Movie Title">
                </div>
                <div class="form-group mb-5">
                    <input class="form-control" type="number"  name="year" id="movie-year" placeholder="Release Year">
                </div>
                <div class="form-group mb-5">
                    <input class="form-control" type="number" name="rating" id="movie-rating" placeholder="Movie Rating">
                </div>
                <div class="form-group mb-5">
                    <input class="form-control" type="text" name="genre" id="movie-genre" placeholder="Movie Genre">
                </div>
                <button class="btn btn-outline-warning">Add movie</button>
            </form>
        </div>
        <div class="col-lg-8 com-sm-12 mt-5">
            <% movies.forEach((movie)=> { %>
                    <div class="col-lg-12 movie-card">
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="/images/<%= movie.photo %>" class="img-fluid rounded-start card-img" alt="Movie Poster">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= movie.name %>
                                        </h5>
                                        <br>
                                        <p class="card-text">
                                            <i class="bi bi-eye" style="color: gold"></i> Genre: <%= movie.genre.join(", ") %>
                                                            </p>
                                                            <br>
                                                            <p class=" card-text">
                                                <small>
                                                    <i class="bi bi-star" style="color: gold"></i> Rating: <%= movie.rating %>
                                                </small>
                                        </p>
                                        <br>
                                        <p class="card-text">
                                            <small>
                                                <i class="bi bi-calendar" style="color: gold"></i> Year: <%= movie.year %>
                                            </small>
                                        </p>
                                        <br>
                                        <div>
                                            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal">Edit</button>
                                            <button class="btn">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
        </div>
    </div>
</div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="test" class="container" method="patch" action="/movies/636636564e18176e094632fa">
                <div class="form-group mb-5">
                    <input class="form-control" type="text" id="id" name="id" placeholder="Movie unique ID: <%= movies[0]._id %>" disabled>
                </div>
                <div class="form-group mb-5">
                    <input class="form-control" type="text" id="name" name="name" placeholder="Movie Title">
                </div>
                <div class="form-group mb-5">
                    <input class="form-control" type="number" id="year" name="year" placeholder="Release Year">
                </div>
                <div class="form-group mb-5">
                    <input class="form-control" type="number" id="rating" name="rating" placeholder="Movie Rating">
                </div>
                <div class="form-group mb-5">
                    <input class="form-control" type="text" id="genre" name="genre" placeholder="Movie Genre">
                </div>
                <button type="submit" class="btn btn-outline-warning">Save changes</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </form>
        </div>
      </div>
    </div>
  </div>

<script>
    const form = document.getElementById("test");

    form.onsubmit = (e) => {

        e.preventDefault();

        const name = document.getElementById("name").value;
        const year = document.getElementById("year").value;
        const rating = document.getElementById("rating").value;
        const genre = document.getElementById("genre").value;

        let data = {};

        if (name) {
            data.name = name;
        }
        if (year) {
            data.year = year;
        }
        if (rating) {
            data.rating = rating;
        }
        if (genre) {
            data.genre = genre;
        }

        fetch("/movies/636636564e18176e094632fa", {
        method: "PATCH",
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({data}),
        })
        .then((data) => data.json())
        .then((res) => {
            console.log(res);
        })

    }

</script>
<%- include('partials/footer') %>
