<%- include('partials/header') %>
<div class="container">
    <div class="row">
        <h2 class="movie-list-title">Movie List</h2>
        <div class="col-lg-4 com-sm-12 mt-5">
            <h2 class="add-movie-title mb-5">Add movie</h2>
            <form class="container" method="post" action="/">
                <div class="form-group mb-5">
                    <input class="form-control" type="text" name="name" id="movie-name1" placeholder="Movie Title">
                </div>
                <div class="form-group mb-5">
                    <input class="form-control" type="number" name="year" id="movie-year1" placeholder="Release Year">
                </div>
                <div class="form-group mb-5">
                    <input class="form-control" type="number" name="rating" id="movie-rating1" placeholder="Movie Rating">
                </div>
                <div class="form-group mb-5">
                    <input class="form-control" type="text" name="genre" id="movie-genre1" placeholder="Movie Genre">
                </div>
                <button class="btn btn-outline-warning">Add movie</button>
            </form>
        </div>
        <div class="col-lg-8 com-sm-12 mt-5">
            <% movies.forEach((movie)=> { %>
                    <div class="col-lg-12 movie-card">
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-4">
                                    <img src="/images/<%= movie.photo %>" class="img-fluid rounded-start" alt="Movie Poster">
                                </div>
                                <div class="col-8">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= movie.name %>
                                        </h5>
                                        <br>
                                        <p class="card-text">
                                            <i class="bi bi-eye" style="color: gold"></i> Genre: <%= movie.genre.join(", ") %>
                                                            </p>
                                                            <br>
                                                            <p class=" card-text">
                                                <small>
                                                    <i class="bi bi-star" style="color: gold"></i> Rating: <%= movie.rating %>
                                                </small>
                                        </p>
                                        <br>
                                        <p class="card-text">
                                            <small>
                                                <i class="bi bi-calendar" style="color: gold"></i> Year: <%= movie.year %>
                                            </small>
                                        </p>
                                        <br>
                                        <div>
                                            <button class="btn" id="btn-show-add-modal">Edit</button>
                                            <button class="btn">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>